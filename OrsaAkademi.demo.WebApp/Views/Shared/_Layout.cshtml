<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - OrsaAkademi.demo.WebApp</title>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
   
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" href="/Home/Index">Orsa Akademi</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href="/Home/Index">Ana sayfa</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" href="/PersonelEkleme/PersonelListesi">Personel Listesi</a>
                        </li>
                    </ul>

                </div>
                <ul class="navbar-nav justify-content-end align-content-end align-items-end">
                    <h5 id="hg" class="alert-dark"></h5>
                    <li id="kullaniciadi" class="nav-item justify-content-end">

                    </li>
                    <li id="logout" class="nav-item justify-content-end">

                    </li>
                </ul>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - Orsa Akademi - <a asp-area="" asp-controller="Home" asp-action="Privacy">Gizlilik Bilgileri</a>
        </div>
    </footer>
    <script src="~/js/layoutt.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.datatables.net/2.0.6/js/dataTables.js"></script>
    <script src="https://cdn.datatables.net/2.0.6/js/dataTables.bootstrap5.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
